<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>LoFoHero &raquo; Orders</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://d396qusza40orc.cloudfront.net/startup%2Fcode%2Fbootstrap-combined.no-icons.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css">
    <script src="https://d396qusza40orc.cloudfront.net/startup%2Fcode%2Fjquery.js"></script>
    <script src="https://d396qusza40orc.cloudfront.net/startup%2Fcode%2Fbootstrap.js"></script>
    <style type="text/css">
      #order_box {
      margin-top:40px;
      }
      </style>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
	<div class="container">
	  <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	    </button>
	  <a class="brand" href="/">LoFoHero</a>
	  <div class="nav-collapse collapse">
	    <ul class="nav">
	      <li><a href="/">Home</a></li>
	      <li class="active"><a href="#">Orders</a></li>
	      </ul>
	    </div>
	  </div>
	</div>
    </div>

    <div class="container" id="order_box">
      <h2>Orders</h2>
      <table class="table table-striped">
        <thead>
          <th>Coinbase ID</th>
          <th>Amount</th>
          <th>Transaction time</th>
        </thead>
        <tbody>
          <% for(var i = 0; i < orders.length; i++) {%>
             <tr>
               <td><%= orders[i].coinbase_id %></td>
               <td><%= orders[i].amount %></td>
               <td><%= orders[i].time %></td>
             </tr>
          <% } %>
        </tbody>             
      </table>
      <a class="btn" href="/refresh_orders">Refresh orders from coinbase</a>
    </div>
  </body>
</html>
